<Window x:Class="WordHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordHelper"
        mc:Ignorable="d"
        Title="Генератор отчета Word" Height="121" Width="640" HorizontalAlignment="Center" VerticalAlignment="Center" Icon="icon.png" Background="#FFE8E8E8">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFF0F0F0" Offset="0.296"/>
                <GradientStop Color="#FF7DC244" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="Выбрать" Margin="0,10,20,0" VerticalAlignment="Top" Click="Button_Click" Height="26" HorizontalAlignment="Right" Width="79" RenderTransformOrigin="0,0"/>
        <Label Name="Lable1"  Content="Выберите файл EXCEL для формирования отчета" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Width="480"/>
        <Button Content="Сформировать Word" Margin="0,50,20,0" VerticalAlignment="Top" Height="26" HorizontalAlignment="Right" Width="140" Click="Button_Click_1"/>

    </Grid>
</Window>
